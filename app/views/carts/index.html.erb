 </style>

<ol>
<% @listings.each do |listing| %>
  <li> <%= listing.product_name %> : $<%= Listing.float_to_money(listing.product_price) %></li> <br>
<% end %>
</ol>

<button><%= button_to "Checkout", '/carts', method: :delete,params: {checkout: 'true'}, data: { confirm: "Are you sure you want to checkout?" } %></button>
<button><%= button_to "Clear Cart", '/carts', method: :delete, data: { confirm: "Are you sure you want to clear your cart?" } %></button>
