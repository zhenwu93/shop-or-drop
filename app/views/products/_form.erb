<% if flash[:error] %>
  <% flash[:error].each do |error| %>
    <%= error %><br>
  <% end %>
<% end %>


<%= form_for @product do |f| %>
  <%= f.label :name%><br>
  <%= f.text_field :name %><br>
  <%= f.label :description %><br>
  <%= f.text_area :description %><br>
  <%= f.label :price %><br>
  <%= f.number_field :price, step: 0.01 %><br>
  <%= f.label :quantity %><br>
  <%= f.number_field :quantity %><br>
  <%= f.label :seller_id %><br>
  <%= f.number_field :seller_id %><br>
  <%= f.submit %>
  <% end %>
